set fenc=utf-8

set nobackup
set nowritebackup
set noswapfile

set smartindent
set expandtab
set tabstop=8
set softtabstop=4
set shiftwidth=4

set cursorline

set number
set textwidth=80

noremap <Up> <Nop>
noremap <Down> <Nop>
noremap <Left> <Nop>
noremap <Right> <Nop>
inoremap <Up> <Nop>
inoremap <Down> <Nop>
inoremap <Left> <Nop>
inoremap <Right> <Nop>
